<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Blur -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <gradient
                android:startColor="#90C8F5C3"
                android:endColor="#9082A3FF"
                android:angle="0" />
        </shape>
    </item>

    <!-- Stroke (Viền ngoài) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <stroke
                android:width="2dp"
                android:color="@color/xanh5"/>
        </shape>
    </item>

</layer-list>
